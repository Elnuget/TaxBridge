{
  "name": "taxbridge",
  "version": "1.0.0",
  "description": "TaxBridge - Sistema de Gesti√≥n Tributaria (Frontend + Backend)",
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend/taxbridge-frontend",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend/taxbridge-frontend && npm start",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build:frontend": "cd frontend/taxbridge-frontend && npm run build",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend/taxbridge-frontend && npm test"
  },
  "keywords": [
    "taxbridge",
    "angular",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "TaxBridge Team",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
