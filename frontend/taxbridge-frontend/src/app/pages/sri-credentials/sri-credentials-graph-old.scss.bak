// ==================================
// ESTILOS DEL GRAFO DE CREDENCIALES
// ==================================

// Leyenda
.legend-item {
  display: flex;
  align-items: center;
  gap: 8px;
  
  .node-indicator {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    display: inline-block;
    
    &.node-admin { background: linear-gradient(135deg, #e74c3c, #c0392b); }
    &.node-contador { background: linear-gradient(135deg, #3498db, #2980b9); }
    &.node-customer { background: linear-gradient(135deg, #2ecc71, #27ae60); }
    &.node-credential { background: linear-gradient(135deg, #f39c12, #e67e22); }
  }
  
  .edge-indicator {
    width: 30px;
    height: 2px;
    display: inline-block;
    
    &.solid { background: #333; }
    &.dashed { 
      background: repeating-linear-gradient(
        90deg,
        #999 0px,
        #999 4px,
        transparent 4px,
        transparent 8px
      );
    }
  }
}

// Contenedor del grafo
.graph-container {
  padding: 20px;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 8px;
  min-height: 400px;
}

// Nivel del grafo
.graph-level {
  margin-bottom: 30px;
  
  .level-header {
    text-align: center;
    margin-bottom: 15px;
  }
  
  .level-nodes {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
  }
  
  .level-arrows {
    text-align: center;
    margin: 15px 0;
    
    .arrow-down {
      font-size: 1.5rem;
      color: #6c757d;
      animation: pulse 2s infinite;
    }
  }
}

// Animación de flechas
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

// Nodo individual
.graph-node {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 12px 16px;
  border-radius: 10px;
  min-width: 180px;
  max-width: 250px;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  cursor: pointer;
  
  &:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }
  
  .node-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
  }
  
  .node-content {
    flex: 1;
    min-width: 0;
    
    .node-label {
      font-weight: 600;
      font-size: 0.9rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .node-details {
      font-size: 0.75rem;
      color: rgba(0, 0, 0, 0.6);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .node-status {
      margin-top: 5px;
    }
  }
  
  // Estilos por tipo de nodo
  &.node-admin {
    background: linear-gradient(135deg, #ffeaea 0%, #ffcccc 100%);
    border: 2px solid #e74c3c;
    
    .node-icon {
      background: #e74c3c;
      color: white;
    }
  }
  
  &.node-contador {
    background: linear-gradient(135deg, #e8f4fc 0%, #cce5ff 100%);
    border: 2px solid #3498db;
    
    .node-icon {
      background: #3498db;
      color: white;
    }
  }
  
  &.node-customer {
    background: linear-gradient(135deg, #e8f8f0 0%, #c8f7dc 100%);
    border: 2px solid #2ecc71;
    
    .node-icon {
      background: #2ecc71;
      color: white;
    }
  }
  
  &.node-credential {
    background: linear-gradient(135deg, #fff8e8 0%, #ffedc8 100%);
    border: 2px solid #f39c12;
    
    .node-icon {
      background: #f39c12;
      color: white;
    }
  }
  
  &.node-default {
    background: #f8f9fa;
    border: 2px solid #6c757d;
    
    .node-icon {
      background: #6c757d;
      color: white;
    }
  }
}

// Font monospace para códigos
.font-monospace {
  font-family: 'Roboto Mono', monospace;
}

// Responsive
@media (max-width: 768px) {
  .graph-node {
    min-width: 150px;
    max-width: 200px;
    padding: 10px 12px;
    
    .node-icon {
      width: 32px;
      height: 32px;
      font-size: 1rem;
    }
    
    .node-content {
      .node-label {
        font-size: 0.85rem;
      }
    }
  }
  
  .level-nodes {
    gap: 10px;
  }
}
